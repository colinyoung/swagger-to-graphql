#!/usr/bin/env node
var argv = require('yargs').argv;
var graphql = require('graphql');

var build = require('../lib');

if (argv.help) {
  console.log('\nUsage: swagger2graphql --swagger=/path/to/schema.json --build-options=Opt1,Opt2');
}

if (!argv.swagger) {
  console.log('\nPlease provide path to swagger schema. \n--help for usage example');
} else {
  build(argv.swagger).then(schema => {
    console.log(graphql.printSchema(schema));
  }).catch(console.log);
}
